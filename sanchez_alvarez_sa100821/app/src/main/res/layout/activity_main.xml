            app:srcCompat="@drawable/ufglogocorporativvohorizontal"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="104dp"
            android:layout_height="101dp"
            android:id="@+id/fotojos"

            app:srcCompat="@drawable/fotojos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bioname"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="0dp"
                android:text="Joselin Carolina Sanchez"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/biotext"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="30dp"
                android:gravity="start|top"
                android:inputType="text|textMultiLine"
                android:maxEms="15"
                android:maxLines="15"
                android:text="Estudiante de cuarto aÃ±o de ingenieria en desarrollo de software de la ufg"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="239dp"
            android:layout_height="516dp"
